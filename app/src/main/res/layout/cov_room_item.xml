<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_bar_bg"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_gravity="center_vertical"
    android:layout_height="40dp">
    <androidx.cardview.widget.CardView
        android:layout_width="35dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/avatar_card"
        android:layout_height="35dp">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/avatar_view"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/name_text"
        android:layout_toStartOf="@id/name_right"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/name_right"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_right"
        android:layout_height="wrap_content"/>
</RelativeLayout>
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_marginStart="10dp"-->
<!--        android:layout_marginEnd="10dp"-->
<!--        android:background="@color/line_bg"-->
<!--        android:layout_height="1px"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/remark_layout"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/remark_hint"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:text="我在群里的昵称"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/remark_text"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/remark_right"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_right"
            android:id="@+id/remark_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>

</layout>