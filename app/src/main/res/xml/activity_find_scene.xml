<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ConstraintSet android:id="@+id/card_start">
        <Constraint android:id="@+id/input_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp"
            android:background="@drawable/ic_rectangle"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/card_end">
        <Constraint android:id="@+id/input_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="4dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>
    <Transition app:constraintSetStart="@id/card_start"
         app:constraintSetEnd="@+id/card_end" app:duration="600"/>
</MotionScene>
